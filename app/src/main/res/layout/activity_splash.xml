<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.SplashActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/splash_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/final_logo"
                android:layout_width="198dp"
                android:layout_height="98dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/final_logo" />

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/final_logo"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/qar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:textAllCaps="true"
                    android:fontFamily="@font/anitlles"
                    android:text="@string/qar"
                    android:textColor="@color/orange_colour"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/anitlles"
                    android:text="@string/service"
                    android:textAllCaps="true"
                    android:textSize="28sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/service_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="17dp"
                android:fontFamily="@font/kastelov_axiforma_semibold"
                android:text="@string/splash_text"
                android:textAlignment="center"
                android:textColor="@color/black_dot_color"
                android:textSize="13sp" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>