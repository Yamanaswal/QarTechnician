<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:id="@+id/manage_card"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pref_time_text_view"
            android:text="@string/time_8am_10am"
            android:textColor="@color/black_color"
            android:textSize="14sp"
            android:layout_marginTop="11dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/kastelov_axiforma_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/pref_time_edit_text"
            android:text="@string/time_8am_10am"
            android:textColor="@color/black_color"
            android:textSize="14sp"
            android:layout_marginTop="11dp"
            android:maxLines="1"
            android:visibility="gone"
            android:inputType="text"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/kastelov_axiforma_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/edit_time"
            android:src="@mipmap/edit_black"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_width="12dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>