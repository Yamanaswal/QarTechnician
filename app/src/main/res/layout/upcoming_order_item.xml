<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/appoint_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9.25dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/kastelov_axiforma_semibold"
            android:text="@string/appoint_no_2526352"
            android:textAlignment="textStart"
            android:textColor="@color/black_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/date_and_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10.25dp"
            android:fontFamily="@font/kastelov_axiforma_regular"
            android:text="@string/date_on_card"
            android:textAlignment="textEnd"
            android:textSize="12sp" />

        <View
            android:id="@+id/view_line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/date_and_time"
            android:layout_marginTop="11.5dp"
            android:layout_marginBottom="13.5dp"
            android:background="@color/view_line_color" />

        <TextView
            android:id="@+id/car_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3sp"
            android:layout_below="@+id/view_line1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9.75dp"
            android:fontFamily="@font/kastelov_axiforma_semibold"
            android:text="@string/engine_oil_change"
            android:textAlignment="textStart"
            android:textColor="@color/black_color" />

        <TextView
            android:id="@+id/car_colour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_service_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10.75dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12.25dp"
            android:fontFamily="@font/kastelov_axiforma_medium"
            android:text="@string/mark_white" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dot_image"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_below="@+id/car_service_name"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="12.25dp"
            android:layout_toEndOf="@+id/car_colour"
            android:src="@color/black_dot_color" />

        <TextView
            android:id="@+id/car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_service_name"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/dot_image"
            android:fontFamily="@font/kastelov_axiforma_medium"
            android:text="@string/hyundai" />

        <TextView
            android:id="@+id/vehicle_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_type"
            android:layout_marginStart="10.75dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="13dp"
            android:fontFamily="@font/kastelov_axiforma_medium"
            android:text="@string/vehicle_no_qatar_256356"
            android:textSize="14sp" />

            <ImageView
                android:layout_width="70dp"
                android:id="@+id/circle_image"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/view_line1"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/circle_background_orange" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>