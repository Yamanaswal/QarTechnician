<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/car_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/kastelov_axiforma_semibold"
            android:text="@string/car_steam_wash"
            android:textColor="@color/black_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_service"
            android:layout_marginStart="14.5dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/kastelov_axiforma_medium"
            android:text="@string/john_doe"
            android:textColor="@color/black_dot_color"
            android:textSize="14sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dot_image"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_below="@+id/car_service"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/person_name"
            android:src="@color/black_dot_color" />

        <TextView
            android:id="@+id/car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_service"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@id/dot_image"
            android:fontFamily="@font/kastelov_axiforma_medium"
            android:text="@string/hyundai"
            android:textColor="@color/black_dot_color" />

        <TextView
            android:id="@+id/booked_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/person_name"
            android:layout_marginStart="14.5dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/kastelov_axiforma_medium"
            android:text="@string/service_date"
            android:textColor="@color/black_dot_color"
            android:textSize="14sp" />

        <View
            android:id="@+id/view_line_two"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/booked_date"
            android:layout_marginTop="23.5dp"
            android:background="@color/view_line_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_line_two">

            <TextView
                android:id="@+id/reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14.5dp"
                android:layout_marginBottom="14dp"
                android:layout_toStartOf="@+id/view_line_three"
                android:fontFamily="@font/kastelov_axiforma_semibold"
                android:text="@string/reject"
                android:textColor="@color/red_colour"
                android:textSize="14sp" />

            <View
                android:id="@+id/view_line_three"
                android:layout_width="1dp"
                android:layout_height="26dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="66.5dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="65.5dp"
                android:layout_marginBottom="9dp"
                android:alpha="0.5"
                android:background="@color/view_line_color" />

            <TextView
                android:id="@+id/confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14.5dp"
                android:layout_marginBottom="14dp"
                android:layout_toEndOf="@+id/view_line_three"
                android:fontFamily="@font/kastelov_axiforma_semibold"
                android:text="@string/confirm"
                android:textColor="@color/green_colour_dark"
                android:textSize="14sp" />

        </RelativeLayout>

        <!--  orange circle image  -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_centerInParent="true"
                android:src="@color/orange_colour" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="26dp"
                android:src="@mipmap/noun_sedan" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>