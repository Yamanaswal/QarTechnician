<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/rounded_dialog"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/booked_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="26dp"
        android:fontFamily="@font/kastelov_axiforma_semibold"
        android:text="@string/date_5_mar_2018"
        android:textColor="@color/black_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="27dp"
        android:fontFamily="@font/kastelov_axiforma_medium"
        android:text="@string/time_10am_12pm"
        android:textColor="@color/black_color"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/spinner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booked_date"
        android:layout_marginStart="10dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/spinner_cardview_silver"
        android:elevation="2dp">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingStart="15dp"
            android:paddingTop="13dp"
            android:paddingEnd="15dp"
            android:paddingBottom="13dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/select_reason_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_layout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/kastelov_axiforma_semibold"
        android:text="@string/select_reason"
        android:textColor="@color/black_color"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/reason_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_reason_text"
        android:layout_marginStart="15dp"
        android:layout_marginTop="23dp">

        <TextView
            android:id="@+id/lorem_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/kastelov_axiforma_medium"
            android:text="@string/lorem_text"
            android:textColor="@color/black_color"
            android:textSize="15sp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp" />

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reason_layout"
        android:layout_marginTop="42dp"
        android:background="@color/orange_colour"
        android:fontFamily="@font/kastelov_axiforma_bold"
        android:text="@string/submit"
        android:textColor="@color/black_color"
        android:textSize="18sp" />

</RelativeLayout>