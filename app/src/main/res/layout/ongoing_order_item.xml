<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/appoint_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9.25dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/kastelov_axiforma_semibold"
            android:text="@string/appoint_no_2526352"
            android:textAlignment="textStart"
            android:textColor="@color/black_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/date_and_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10.25dp"
            android:fontFamily="@font/kastelov_axiforma_regular"
            android:text="@string/date_on_card"
            android:textAlignment="textEnd"
            android:textSize="12sp" />

        <View
            android:id="@+id/view_line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/date_and_time"
            android:layout_marginTop="11.5dp"
            android:layout_marginBottom="13.5dp"
            android:background="@color/view_line_color" />

        <TextView
            android:id="@+id/car_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_line1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9.75dp"
            android:fontFamily="@font/kastelov_axiforma_semibold"
            android:text="@string/engine_oil_change"
            android:textAlignment="textStart"
            android:textColor="@color/black_color" />

        <TextView
            android:id="@+id/car_colour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_service_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10.75dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12.25dp"
            android:fontFamily="@font/kastelov_axiforma_medium"
            android:text="@string/mark_white" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dot_image"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_below="@+id/car_service_name"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="12.25dp"
            android:layout_toEndOf="@+id/car_colour"
            android:src="@color/black_dot_color" />

        <TextView
            android:id="@+id/car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_service_name"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/dot_image"
            android:fontFamily="@font/kastelov_axiforma_medium"
            android:text="@string/hyundai" />

        <TextView
            android:id="@+id/vehicle_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_type"
            android:layout_marginStart="10.75dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="9.5dp"
            android:fontFamily="@font/kastelov_axiforma_medium"
            android:text="@string/vehicle_no_qatar_256356"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/relative_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vehicle_no"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line_color" />

            <RelativeLayout
                android:id="@+id/call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/view_line_four">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginStart="65.44dp"
                    android:layout_marginTop="15dp"
                    android:layout_toStartOf="@+id/call_text_view"
                    android:src="@mipmap/noun_call" />

                <TextView
                    android:id="@+id/call_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="6.6dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="64.5dp"
                    android:layout_marginBottom="13.5dp"
                    android:fontFamily="@font/kastelov_axiforma_medium"
                    android:text="@string/call"
                    android:textColor="@color/green_colour_dark"
                    android:textSize="14sp" />

            </RelativeLayout>


            <View
                android:id="@+id/view_line_four"
                android:layout_width="1dp"
                android:layout_height="29dp"
                android:layout_centerInParent="true"
                android:background="@color/silver_dark" />


            <RelativeLayout
                android:id="@+id/chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/view_line_four">

                <ImageView
                    android:id="@+id/chat_image"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_marginStart="61.9dp"
                    android:layout_marginTop="16.5dp"
                    android:background="@mipmap/chat_unselected"
                    android:backgroundTint="@color/orange_colour" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5.5dp"
                    android:layout_marginTop="15.5dp"
                    android:layout_toEndOf="@+id/chat_image"
                    android:fontFamily="@font/kastelov_axiforma_medium"
                    android:text="@string/chat"
                    android:textColor="@color/orange_colour"
                    android:textSize="14sp" />

            </RelativeLayout>


        </RelativeLayout>

        <View
            android:id="@+id/view_line_five"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/relative_one"
            android:background="@color/view_line_color" />

        <RelativeLayout
            android:id="@+id/update_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_line_five">

            <ImageView
                android:id="@+id/edit_image"
                android:layout_width="12dp"
                android:layout_height="13dp"
                android:layout_marginTop="17.5dp"
                android:layout_marginEnd="6.48dp"
                android:layout_marginBottom="16dp"
                android:layout_toStartOf="@+id/update_status_text"
                android:src="@mipmap/noun_edit" />

            <TextView
                android:id="@+id/update_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16.5dp"
                android:fontFamily="@font/kastelov_axiforma_medium"
                android:text="@string/update_status"
                android:textColor="@color/black_color"
                android:textSize="14sp" />

        </RelativeLayout>


        <!--  orange circle image  -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_line1"
            android:layout_alignParentEnd="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_centerHorizontal="true"
                android:src="@color/orange_colour" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginTop="19dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="26dp"
                android:src="@mipmap/noun_sedan" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>