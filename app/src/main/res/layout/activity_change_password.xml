<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.ChangePasswordActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_two" />

    <TextView
        android:id="@+id/old_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/kastelov_axiforma_semibold"
        android:text="@string/old_password"
        android:textColor="@color/black_color"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/old_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/old_password_text"
        android:layout_marginStart="15dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/cardview_border_background"
        android:fontFamily="@font/kastelov_axiforma_medium"
        android:hint="@string/enter_old_password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingStart="15dp"
        android:paddingTop="17dp"
        android:paddingEnd="10dp"
        android:paddingBottom="15dp"
        android:textColor="@color/black_dot_color"
        android:textColorHint="@color/black_dot_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/new_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/old_password"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/kastelov_axiforma_semibold"
        android:text="@string/new_password"
        android:textColor="@color/black_color"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_password_text"
        android:layout_marginStart="15dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/cardview_border_background"
        android:fontFamily="@font/kastelov_axiforma_medium"
        android:hint="Enter New Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingStart="15dp"
        android:paddingTop="17dp"
        android:paddingEnd="10dp"
        android:paddingBottom="15dp"
        android:textColor="@color/black_dot_color"
        android:textColorHint="@color/black_dot_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/confirm_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_password"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/kastelov_axiforma_semibold"
        android:text="Confirm Password"
        android:textColor="@color/black_color"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirm_password_text"
        android:layout_marginStart="15dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/cardview_border_background"
        android:fontFamily="@font/kastelov_axiforma_medium"
        android:hint="Enter Confirm Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingStart="15dp"
        android:paddingTop="17dp"
        android:paddingEnd="10dp"
        android:paddingBottom="15dp"
        android:textColor="@color/black_dot_color"
        android:textColorHint="@color/black_dot_color"
        android:textSize="16sp" />

    <Button
        android:id="@+id/change_password_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/orange_colour"
        android:fontFamily="@font/kastelov_axiforma_bold"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textColor="@color/black_color"
        android:textSize="18sp" />

</RelativeLayout>