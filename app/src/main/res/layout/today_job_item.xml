<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:elevation="2dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/appoint_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9.25dp"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/kastelov_axiforma_semibold"
            android:text="@string/appoint_no_2526352"
            android:textAlignment="textStart"
            android:textColor="@color/black_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/date_and_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10.25dp"
            android:fontFamily="@font/kastelov_axiforma_regular"
            android:text="@string/date_on_card"
            android:textAlignment="textEnd"
            android:textColor="@color/black_dot_color"
            android:textSize="12sp" />

        <View
            android:id="@+id/view_line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/date_and_time"
            android:layout_marginTop="11.5dp"
            android:layout_marginBottom="13.5dp"
            android:background="@color/view_line_color" />

        <TextView
            android:id="@+id/car_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_line1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9.75dp"
            android:fontFamily="@font/kastelov_axiforma_semibold"
            android:text="Engine Oil Change"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/car_colour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_service_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10.75dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12.25dp"
            android:fontFamily="@font/kastelov_axiforma_medium"
            android:text="@string/mark_white"
            android:textColor="@color/black_dot_color" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/dot_image"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_below="@+id/car_service_name"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="12.25dp"
            android:layout_toEndOf="@+id/car_colour"
            android:src="@color/black_dot_color" />


        <TextView
            android:id="@+id/car_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_service_name"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/dot_image"
            android:fontFamily="@font/kastelov_axiforma_medium"
            android:text="@string/hyundai"
            android:textColor="@color/black_dot_color" />

        <RelativeLayout
            android:id="@+id/quotations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_colour">

            <TextView
                android:id="@+id/booked_on_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:textSize="12sp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/kastelov_axiforma_medium"
                android:text="@string/booked_on"
                android:textAlignment="viewStart"
                android:textColor="@color/black_dot_color" />

            <TextView
                android:id="@+id/payment_method_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="18dp"
                android:textSize="12sp"
                android:layout_toEndOf="@+id/booked_on_text"
                android:fontFamily="@font/kastelov_axiforma_medium"
                android:text="@string/payment_method"
                android:textAlignment="center"
                android:textColor="@color/black_dot_color" />

            <TextView
                android:id="@+id/vehicle_no_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="16dp"
                android:textSize="12sp"
                android:layout_toEndOf="@+id/payment_method_text"
                android:fontFamily="@font/kastelov_axiforma_medium"
                android:text="@string/vehicle_no"
                android:textAlignment="center"
                android:textColor="@color/black_dot_color" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_two"
            android:layout_width="match_parent"
            android:layout_below="@+id/quotations"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/booking_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10.75dp"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/kastelov_axiforma_medium"
                android:text="@string/date_11_mar_2018"
                android:textAlignment="textStart"
                android:textColor="@color/black_color" />

            <TextView
                android:id="@+id/booking_payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/booking_date"
                android:fontFamily="@font/kastelov_axiforma_medium"
                android:text="@string/online"
                android:textAlignment="center"
                android:textColor="@color/black_color" />

            <TextView
                android:id="@+id/vehicle_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@+id/booking_payment_method"
                android:fontFamily="@font/kastelov_axiforma_medium"
                android:text="@string/qatar_25_2515"
                android:textAlignment="center"
                android:textColor="@color/black_color" />

        </RelativeLayout>


        <View
            android:id="@+id/view_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/relative_two"
            android:layout_marginTop="11.5dp"
            android:layout_marginBottom="15dp"
            android:background="@color/view_line_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_line2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="6dp"
                android:src="@mipmap/noun_edit" />

            <TextView
                android:id="@+id/start_navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/kastelov_axiforma_medium"
                android:text="@string/update_status"
                android:textColor="@color/black_color" />

        </LinearLayout>

        <!--  orange circle image  -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_line1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_centerInParent="true"
                android:src="@color/orange_colour" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="26dp"
                android:src="@mipmap/noun_sedan" />

        </RelativeLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>