<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".screens.ForgetPasswordActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/forget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@+id/relative_one"
        android:fontFamily="@font/kastelov_axiforma_extrabold"
        android:text="@string/forgot"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textColor="@color/black_color"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/password_text"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forget_text"
        android:layout_marginStart="13dp"
        android:fontFamily="@font/kastelov_axiforma_extrabold"
        android:text="@string/password"
        android:textAlignment="textStart"
        android:textAllCaps="true"
        android:textColor="@color/black_color"
        android:textSize="26sp" />

    <RelativeLayout
        android:id="@+id/relative_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="124dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="29dp">

        <ImageView
            android:id="@+id/lock_icon"
            android:layout_width="46.54dp"
            android:layout_height="58.91dp"
            android:src="@mipmap/forgot_lock" />

        <ImageView
            android:layout_width="16.34dp"
            android:layout_height="28dp"
            android:layout_marginStart="38.89dp"
            android:layout_marginTop="32.03dp"
            android:src="@mipmap/forgot" />

    </RelativeLayout>

    <TextView
        android:id="@+id/email_associated_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="82dp"
        android:alpha="0.7"
        android:fontFamily="@font/kastelov_axiforma_medium"
        android:text="@string/forget_info_text"
        android:textColor="@color/black_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_associated_text"
        android:layout_marginStart="15dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/kastelov_axiforma_semibold"
        android:text="@string/email_address"
        android:textAlignment="textStart"
        android:textColor="@color/black_color"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_text"
        android:layout_marginStart="15dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/cardview_border_background"
        android:elevation="2dp"
        android:textColorHint="@color/black_dot_color"
        android:fontFamily="@font/kastelov_axiforma_medium"
        android:hint="@string/enter_email_address"
        android:paddingStart="10dp"
        android:paddingTop="17dp"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:paddingEnd="10dp"
        android:paddingBottom="15dp"
        android:textColor="@color/black_dot_color"
        android:textSize="16sp" />


    <Button
        android:id="@+id/forget_password_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/orange_colour"
        android:fontFamily="@font/kastelov_axiforma_bold"
        android:text="@string/send"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp" />

</RelativeLayout>