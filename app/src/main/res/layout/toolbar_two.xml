<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/cardview_white_background"
    android:elevation="3dp"
    android:translationZ="2dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="23.19dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/noun_back" />

        <TextView
            android:id="@+id/bar_text"
            android:layout_width="wrap_content"
            android:fontFamily="@font/kastelov_axiforma_semibold"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginStart="90dp"
            android:text="Toolbar_Text_Here" />

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>